        // æ ¹æ®ç”Ÿæ—¥è®¡ç®—æ˜Ÿå®¿ï¼ˆæŒ‰æ—¥æœŸåŒ¹é…28æ˜Ÿå®¿ï¼Œè¦†ç›–å®Œæ•´åˆ—è¡¨ï¼‰
        function getXingxiu(birthday) {
            const date = new Date(birthday);
            const day = date.getDate();
            const index = (day - 1) % xingxiuList.length; // ç¡®ä¿ç´¢å¼•0-27
            return xingxiuList[index];
        }

        // ç²’å­èšåˆæˆæ˜Ÿå®¿å›¾å½¢ï¼ˆäº”è§’æ˜Ÿå½¢çŠ¶ï¼Œé€‚é…æ‰‹æœºç«¯è§†è§‰æ•ˆæœï¼‰
        function gatherParticles() {
            const starPoints = [
                { x: 0, y: 3, z: 0 }, { x: 0.9, y: 0.9, z: 0 },
                { x: 3, y: 0.9, z: 0 }, { x: 1.5, y: -0.6, z: 0 },
                { x: 2.1, y: -3, z: 0 }, { x: 0, y: -1.8, z: 0 },
                { x: -2.1, y: -3, z: 0 }, { x: -1.5, y: -0.6, z: 0 },
                { x: -3, y: 0.9, z: 0 }, { x: -0.9, y: 0.9, z: 0 }
            ];

            particles.children.forEach((particle, i) => {
                const targetPoint = starPoints[i % starPoints.length];
                const tween = { progress: 0 };
                const animate = () => {
                    tween.progress += 0.02;
                    if (tween.progress < 1) {
                        particle.position.lerp(targetPoint, tween.progress);
                        requestAnimationFrame(animate);
                    }
                };
                animate();
            });
        }

        // å åœä¸»å‡½æ•°
        function startDivination() {
            const birthday = document.getElementById('birthday').value;
            if (!birthday) {
                alert('è¯·è¾“å…¥ä½ çš„ç”Ÿæ—¥å‘€ï½');
                return;
            }
            gatherParticles();
            const xingxiu = getXingxiu(birthday);
            document.getElementById('xingxiuName').textContent = xingxiu.name;
            document.getElementById('xingxiuDesc').textContent = xingxiu.desc;
            document.getElementById('luckyTip').textContent = xingxiu.tip;
            document.getElementById('resultCard').classList.add('active');
        }

        // å…³é—­å¡ç‰‡
        function closeCard() {
            document.getElementById('resultCard').classList.remove('active');
            // ç²’å­æ•£å¼€ï¼Œæ¢å¤åˆå§‹çŠ¶æ€
            particles.children.forEach(particle => {
                particle.position.set(
                    (Math.random() - 0.5) * 20,
                    (Math.random() - 0.5) * 20,
                    (Math.random() - 0.5) * 20
                );
            });
        }

        // çª—å£é€‚é…
        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });

        // åŠ¨ç”»å¾ªç¯
        function animate() {
            requestAnimationFrame(animate);
            particles.rotation.y += 0.001;
            renderer.render(scene, camera);
        }
        animate();
    </script>
